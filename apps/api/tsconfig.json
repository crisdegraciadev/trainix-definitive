{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./out",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"]
    }
  }
}
