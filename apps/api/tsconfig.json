{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./out",
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@injections/*": ["src/injections/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@core/*": ["src/_old/core/*"],
      "@modules/*": ["src/_old/modules/*"]
    }
  }
}
