{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".out/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start:api:test": {
      "dependsOn": ["^db:generate:dev"],
      "cache": false
    },
    "test:api:e2e": {
      "cache": false
    },
    "db:generate:dev": {
      "cache": false,
      "dependsOn": ["^db:generate:dev"]
    },
    "db:generate:test": {
      "cache": false,
      "dependsOn": ["^db:generate:test"]
    }
  }
}
